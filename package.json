    "types": "dist/index.d.ts",
    "exports": {
        "./general": "./dist/general.error.js",
        "./http": "./dist/http.error.js"
    },
    "scripts": {
        "test": "mocha --recursive",
        "build": "tsc",
        "coverage": "nyc --reporter=text-summary --reporter=lcov npm run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Skillnter/http-error-kit.git"
    },
    "keywords": [
        "http",
